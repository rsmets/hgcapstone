
<h2>Pick a data set</h2>

<%= select_tag(:data_type_id, options_from_collection_for_select(@data_types, 'id','name', @selected_data_type), id: 'analyze-data-type') %>

<div id="spinner"></div>
<div id="scroll-wrapper">
  <svg id="heatmap-chart" align="center" ></svg>
</div>

<%= javascript_include_tag 'analyze.js', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'modalGraph.js', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'index.js', 'data-turbolinks-track' => true %>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Back to heatmap"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body" style="position: relative; display: block;">
        <div class="btn-group modal-toolbar" role="group" aria-label="..." data-toggle="buttons">
          <label><input id="graph-bar" type="radio" name="graph-type">Bar</label>
          <label><input id="graph-line" type="radio" name="graph-type">Line</label>
          <label><input id="graph-scatter" type="radio" name="graph-type">Scatter</label>
        </div>
        <div class="btn-group" role="group" aria-label="..." data-toggle="buttons">
          <label><input id="graph-norm" type="radio" name="graph-norm-type">Normalized</label>
          <label><input id="graph-nonnorm" type="radio" name="graph-norm-type">Non-Normalized</label>
        </div>
        <svg id="graph" width="2000" height="1000"></svg>
      </div>
    </div>
  </div>
</div>
