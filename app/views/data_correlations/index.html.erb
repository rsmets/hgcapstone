<p id="notice"><%= notice %></p>
<h1>Listing Data Correlations</h1>

<table>
  <thead>
    <tr>
      <th>Pearson's Coefficient</th>
      <th>Spearman's Coefficient</th>
      <th>Input Dataset</th>
      <th>Comparison Dataset</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_correlations.each do |data_correlation| %>
      <tr>
        <td><%= data_correlation.p_coeff %></td>
        <td><%= data_correlation.s_coeff %></td>
        <td><%= DataType.find(data_correlation.event1_id)[:name] %></td>
        <td><%= DataType.find(data_correlation.event2_id)[:name] %></td>
        <td><%= link_to 'Show', data_correlation %></td>
        <td><%= link_to 'Edit', edit_data_correlation_path(data_correlation) %></td>
        <td><%= link_to 'Destroy', data_correlation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

