<h2>Pick a data set</h2>
<p>Sort by</p>
<%= form_tag(data_menu_pick_data_submit_path(:data_id), method: 'get') do %>
	<%= radio_button_tag(:age,"name") %>
	<%= label_tag(:sort_by_name, "Name") %>
	<br>
	
	<%= radio_button_tag(:age, "range") %>
	<%= label_tag(:sort_by_largest_range, "Largest range") %>
	<br>
	<%= radio_button_tag(:age, "most recent") %>
	<%= label_tag(:sort_by_most_recent, "Most recent") %>
	<br>
	<%= select_tag(:data_id, options_from_collection_for_select(@dt, 'id','name', @selected_dt)) %>
	<br>
	<%= submit_tag("Pick it!") %>

<% end %>