<h2 class="bg-dwarf bg-explore">Explore</h2>
<!--<%= content_tag :div, id: 'mycontainer', data: {source: @data_types}%> -->

<%= javascript_include_tag 'explore.js', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'modalGraph.js', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'index.js', 'data-turbolinks-track' => true %>

<div id="spinner"></div>
<svg id="heatmap-chart" width="1000" height="500"></svg>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Back to heatmap"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body" style="position: relative; display: block;">
        <div class="btn-group modal-toolbar" role="group" aria-label="..." data-toggle="buttons">
          <label><input id="graph-bar" type="radio" name="graph-type">Bar</label>
          <label><input id="graph-line" type="radio" name="graph-type">Line</label>
          <label><input id="graph-scatter" type="radio" name="graph-type">Scatter</label>
        </div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Default
        <div class="btn-group" role="group" aria-label="..." data-toggle="buttons-radio">
          <button id="graph-norm" type="button" class="btn btn-default">Normalized</button>
          <button id="graph-nonnorm" type="button" class="btn btn-default">Non-Normalized</button>
        </div>
        <svg id="graph" width="2000" height="1000"></svg>

      </div>
    </div>
  </div>
</div>